# We use the rust image as the base
# https://hub.docker.com/r/_/rust/
FROM rust:1.29.2

WORKDIR /usr/src/sammy

COPY . .

RUN cd fetchers/binance && \
       cargo build --release && \
       cargo install --path . && \
       cargo clean

ENV RUST_LOG "binance=info"
ENV RUST_BACKTRACE 1

ENTRYPOINT ["binance"]
